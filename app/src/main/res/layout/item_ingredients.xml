<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageIngredients"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_search_category_default"
        android:background="@android:color/transparent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageIngredients"
        android:textSize="25dp"
        android:text="hfh"
        android:fontFamily="sans-serif-black"
        android:paddingLeft="15dp"
        android:id="@+id/ingredientsName"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageIngredients"
        android:layout_below="@id/ingredientsName"
        android:id="@+id/ingredientsCategory"
        android:text="sdsndk"
        android:textSize="10dp"
        android:paddingLeft="15dp"
        android:fontFamily="serif"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageIngredients"
        android:layout_below="@id/ingredientsCategory"
        android:id="@+id/ingredientsDetails"
        android:text="ndfnksdfn"
        android:textSize="20dp"
        android:paddingLeft="15dp"
        android:fontFamily="serif-monospace"
        android:layout_marginTop="5dp"
        />
    
</RelativeLayout>